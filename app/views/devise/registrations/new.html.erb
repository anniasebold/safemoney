<% @title="Cadastro" %>
<div class="register-form">
  <div class="container">
    <div class="alert">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <h2 class="text-center form-group">Cadastro</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: "form-control-file" %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: "form-control", required: :required, autocomplete: "name" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control", required: :required, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :education %>
        <%= f.select :education, options_for_select(User.education.options), {}, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autofocus: true, class: "form-control", required: :required, autocomplete: "new-password" %>
        <small class="form-text text-muted">No m√≠nimo <%= @minimum_password_length %> caracteres</small><br>
      </div>

      <div class="form-group">
        <% if controller_name != 'sessions' %>
          <%= link_to "Ao continuar eu concordo com os Termos de Uso", "https://www.google.com/", class: "terms-service" %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.submit "Cadastrar", class: "btn btn-primary btn-block font-weight-bold" %><br>
        <p class="text-center"> ou </p>
        </div>
      <div class="form-group">
        <%= render "devise/shared/link_login" %>
      </div>
    <% end %>
  </div>
</div>

